extends layout

block modal
  .modal.is-active(_="on closeModal remove me")
    .modal-background(_="on click trigger closeModal then halt default")
    .modal-card
      header.modal-card-head
        p.modal-card-title Assign task to a project
        a.delete(
          href=url_for("tasks.display", id=id)
          _="on click trigger closeModal then halt default"
          aria-label="close"
        )

      section.modal-card-body
        form(
          method="POST"
          action=url_for("tasks.assign", id=task.id)
          hx-post=url_for("tasks.assign", id=task.id)
          hx-target="#modal"
        )
          input(type="hidden" name="id" value=task.id)

          .field
            - var classes = "is-danger" if errors.assigned_to else ""
            label.label Project
            .control: .select.is-fullwidth: select(
              name="assigned_to"
              class=classes
            )
              - var selected = task.assigned_to == ""
              option(value="" selected=selected) --
              each project in projects
                - var selected = project.id == task.assigned_to
                option(value=project.id selected=selected)= project.name
            if errors.assigned_to
              p.help.is-danger= errors.assigned_to
            p.help Name of the project to assign to.

          .field.is-grouped
            .control
              a.button(
                href=url_for("tasks.display", id=task.id)
                _="on click trigger closeModal then halt default"
              )
                span.icon: i.fas.fa-ban(aria-hidden="true")
                span Cancel
            .control: button.button.is-success(type="submit")
              span.icon: i.fas.fa-tasks(aria-hidden="true")
              span Assign
