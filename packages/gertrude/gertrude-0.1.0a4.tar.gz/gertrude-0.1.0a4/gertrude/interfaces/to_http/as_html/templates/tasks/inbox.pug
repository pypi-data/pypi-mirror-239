extends layout

block content
  section.section
    .container
      h1.title= _("categories-inbox")

      #tasks(
        hx-get=url_for("tasks.inbox")
        hx-trigger="TasksChanged from:body"
      )
        block tasks
          if tasks
            include mixins/list_of_tasks
            +list_of_tasks(tasks)
          else
            article.message.is-success
              .message-body: p
                | Your inbox is empty!
                br
                | Find the next tasks to do on 
                a(href=url_for("tasks.next"))
                  span the next page
                  span.icon-text: span.icon: span.fas.fa-chevron-circle-right
                | .
