extends layout

block title
  title Log into Gertrude

block content
  section.section
    .container
      h1.title.is-3.has-text-centered Log into Gertrude

      .columns
        .column
        .column
          .buttons
            each link in links
              //- Some plugins, like WebAuthn, need the page to be loaded "normally".
              a.button.is-fullwidth(href="#{url_for(link.route)}" hx-boost="false")
                if link.icon:
                  span.icon: i.fas(class="fa-#{link.icon}")
                span Log in with #{link.label}
        .column
