extends layout

block title
  | Create new project

block content
  section.section
    .container
      h1.title Create new project

      form(method="POST")
        input(type="hidden" name="id" value=project.id)

        .field
          label.label= project.name
          .control
            input.input(
              type="text"
              name="name"
              placeholder="Name of the project"
              value=project.name
            )
            if errors.name
              p.help.is-danger= errors.name

        .field.is-grouped
          .control: a.button(href=url_for("projects.list"))
            span.icon: i.fas.fa-ban(aria-hidden="true")
            span Cancel
          .control: button.button.is-success(type="submit")
            span.icon: i.fas.fa-plus(aria-hidden="true")
            span Create
