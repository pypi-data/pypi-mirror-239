extends layout

block title
  | Capture task

block modal
  .modal.is-active(_="on closeModal remove me")
    .modal-background(_="on click trigger closeModal then halt default")
    .modal-card
      header.modal-card-head
        p.modal-card-title Capture Task
        a.delete(
          href=url_for("tasks.inbox")
          _="on click trigger closeModal then halt default"
          aria-label="close"
        )

      section.modal-card-body
        form(
          method="POST"
          action=url_for("tasks.capture_POST")
          hx-post=url_for("tasks.capture_POST")
          hx-target="#modal"
        )
          input(type="hidden" name="id" value=task.id)

          .field.is-horizontal
            .field-label.is-normal
              label.label(for="title")
                i.fas.fa-star
            .field-body
              .field
                p.control.is-expanded
                  input.input(
                    type="text"
                    name="title"
                    placeholder="A title"
                    value=task.title
                  )
                  if errors.title
                    small.has-text-danger= errors.title

          .field.is-horizontal
            .field-label.is-normal
              label.label(for="description")
                i.fas.fa-file
            .field-body
              .field
                p.control.is-expanded
                  textarea.textarea(
                    name="description"
                    placeholder="An optional description of the task."
                  )= task.description
                if errors.description
                  small.has-text-danger= errors.description

          .field.is-horizontal
            .field-label.is-normal
              label.label(for="project")
                i.fas.fa-tasks
            .field-body
              .field
                .select.is-fullwidth
                  select(name="project_id")
                    option(value="") --
                    each project in projects
                      - var selected = project.id == task.project_id
                      option(value=project.id selected=selected)= project.name
                if errors.project_id
                  small.has-text-danger= errors.project_id

          .field.is-horizontal
            .field-label.is-normal
              span.icon &nbsp;
            .field-body
              .field.is-grouped
                .control
                  a.button(
                    href=url_for("tasks.inbox")
                    _="on click trigger closeModal then halt default"
                  )
                    span.icon: i.fas.fa-ban
                    span Cancel
                .control: button.button.is-success(type="submit")
                  span.icon: i.fas.fa-edit
                  span Capture

        if message
          article.message.is-success
            p.message-body= message
        if errors.other
          article.message.is-danger
            p.message-body= errors.other
