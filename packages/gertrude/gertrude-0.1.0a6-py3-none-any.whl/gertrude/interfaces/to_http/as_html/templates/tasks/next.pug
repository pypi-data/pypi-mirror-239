extends layout

block content
  section.section
    .container
      h1.title= _("categories-next")

      #tasks(
        hx-get=url_for("tasks.next")
        hx-trigger="TasksChanged from:body"
      )
        block tasks
          if tasks
            include mixins/list_of_tasks
            +list_of_tasks(tasks)
          else
            article.message.is-success
              .message-body: p
                | Congratulations! Your list of things to do is empty!
                br
                | Reflect and review all your 
                a(href=url_for("tasks.waiting"))
                  span waiting
                  span.icon-text: span.icon: span.fas.fa-coffee
                | , 
                a(href=url_for("tasks.scheduled"))
                  span scheduled
                  span.icon-text: span.icon: span.fas.fa-calendar
                | and 
                a(href=url_for("tasks.someday"))
                  span someday
                  span.icon-text: span.icon: span.fas.fa-umbrella
                | lists to find out what to do next.
