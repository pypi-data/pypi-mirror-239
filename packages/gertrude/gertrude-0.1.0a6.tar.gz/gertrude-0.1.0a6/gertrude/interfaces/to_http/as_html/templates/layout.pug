doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title
      block title
        | Gertrude

    link(rel="icon" type="image/png" href=url_for("static", filename="favicon.png"))
    link(rel="stylesheet" href=url_for("static", filename="css/bulma@0.9.1.min.css"))
    link(rel="stylesheet" href=url_for("static", filename="css/bulma-list@1.2.0.min.css"))
    link(rel="stylesheet" href=url_for("static", filename="css/font-awesome@5.14.0.css"))
    link(rel="stylesheet" href=url_for("static", filename="css/global.css"))
    block links
  body
    .page
      section.section: .container
        include navbar

      - var messages = get_flashed_messages(with_categories=true)
      include mixins/flash_messages
      +flash_messages(messages)

      block content

    footer.footer
      .content.has-text-centered: p
        span Version #{version} © 2020-2023 Bioneland.
        br
        span Code is licensed under #[a(href="https://www.gnu.org/licenses/agpl-3.0.fr.html") AGPL].

    #modal
      block modal
        .modal

    script(src=url_for("static", filename="js/htmx@1.9.6.min.js"))
    script(src=url_for("static", filename="js/hyperscript@0.9.12.min.js"))
    block scripts
