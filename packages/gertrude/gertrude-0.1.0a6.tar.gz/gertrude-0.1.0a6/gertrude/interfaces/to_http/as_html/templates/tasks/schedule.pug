extends layout

block modal
  .modal.is-active(_="on closeModal remove me")
    .modal-background(_="on click trigger closeModal then halt default")
    .modal-card
      header.modal-card-head
        p.modal-card-title Schedule task on a later date
        a.delete(
          href=url_for("tasks.display", id=id)
          _="on click trigger closeModal then halt default"
          aria-label="close"
        )

      section.modal-card-body
        form(
          method="POST"
          action=url_for("tasks.schedule", id=task.id)
          hx-post=url_for("tasks.schedule", id=task.id)
          hx-target="#modal"
        )
          input(type="hidden" name="id" value=task.id)

          .field
            - var classes = "is-danger" if errors.scheduled_on else ""
            label.label Person
            .control: input.input(
              type="date"
              name="scheduled_on"
              value=task.scheduled_on
              class=classes
            )
            if errors.scheduled_on
              p.help.is-danger= errors.scheduled_on
            p.help Date on wich the task is scheduled to be done.

          .field.is-grouped
            .control
              a.button(
                href=url_for("tasks.display", id=task.id)
                _="on click trigger closeModal then halt default"
              )
                span.icon: i.fas.fa-ban(aria-hidden="true")
                span Cancel
            .control: button.button.is-success(type="submit")
              span.icon: i.fas.fa-calendar(aria-hidden="true")
              span Schedule
