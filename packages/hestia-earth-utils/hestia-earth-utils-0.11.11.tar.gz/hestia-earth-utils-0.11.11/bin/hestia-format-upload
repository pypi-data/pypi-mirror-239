#!/usr/bin/env python3

import sys
from hestia_earth.utils.table import format_for_upload


def main(args: list):
    if len(args) == 0:
        sys.exit('Usage: hestia-format-upload source.csv dest.csv')

    src = args[0]
    dest = args[1] if len(args) > 1 else src
    pd = format_for_upload(src)
    pd.to_csv(dest, index=None)


if __name__ == '__main__':
    sys.exit(main(sys.argv[1:]))
